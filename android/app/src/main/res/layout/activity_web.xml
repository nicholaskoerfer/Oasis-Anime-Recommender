<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/toolbar_layout"
    tools:ignore="Overdraw">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:minHeight="?attr/actionBarSize"
            android:contentInsetLeft="0dp"
            android:contentInsetStart="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            android:contentInsetRight="0dp"
            android:contentInsetEnd="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetEnd="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/btnClose"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/xclose_white"
                        android:padding="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:contentDescription="Go Back"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/site"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_toStartOf="@+id/launchURL"
                        android:layout_toEndOf="@+id/btnClose"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:textAlignment="center"
                        android:ellipsize="end"
                        android:longClickable="true"
                        android:singleLine="true"
                        android:textColor="@android:color/white"
                        android:textSize="19sp"
                        android:paddingBottom="2sp"
                        android:textStyle="bold"
                        android:text="@string/youtube"
                        tools:ignore="RelativeOverlap" />

                    <ImageView
                        android:id="@+id/launchURL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/launch_white"
                        android:padding="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:contentDescription="Launch URL"
                        android:layout_centerVertical="true"
                        tools:ignore="HardcodedText" />
                </RelativeLayout>

                <ProgressBar
                    android:id="@+id/progressbar"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:progressBackgroundTint="@color/black"
                    android:progressTint="@color/white"
                    android:progressBackgroundTintMode="src_over"
                    android:progressTintMode="src_over"
                    android:indeterminate="false"
                    android:layout_alignParentBottom="true"
                    style="?android:progressBarStyleHorizontal"/>

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <com.example.kanshi.MediaWebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:overScrollMode="never"
        android:layout_marginTop="?attr/actionBarSize"
    />
    <LinearLayout
        android:id="@+id/webViewCover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:visibility="gone"
        android:orientation="horizontal" />
</FrameLayout>